
@{
    Layout = null;
}
<!-- BEGIN TOP NAVIGATION MENU -->
<div class="top-menu">
    <ul class="nav navbar-nav pull-right">
        <!-- BEGIN NOTIFICATION DROPDOWN -->
        <!-- DOC: Apply "dropdown-dark" class after below "dropdown-extended" to change the dropdown styte -->
        <li class="dropdown dropdown-extended dropdown-notification" id="header_notification_bar">
            <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                <i class="icon-bell"></i>
                <span class="badge badge-default" id="short-pending-notification"> 7 </span>
            </a>
            <ul class="dropdown-menu">
                <li class="external">
                    <h3>
                        <span class="bold" id="full-pending-notification">  </span> notifications
                    </h3>
                    <a href="@Url.Action("myprofile", "employee")">view all</a>
                </li>
                <li>
                    <ul class="dropdown-menu-list scroller" style="height: 250px;" data-handle-color="#637283" id="list-pending-notifications">
                        
                    </ul>
                </li>
            </ul>
        </li>
        <!-- END NOTIFICATION DROPDOWN -->
        <!-- BEGIN USER LOGIN DROPDOWN -->
        <!-- DOC: Apply "dropdown-dark" class after below "dropdown-extended" to change the dropdown styte -->
        <li class="dropdown dropdown-user">
            <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                <img alt="" class="img-circle" src="~/Content/layouts/layout/img/avatar.png"/>
                <span class="username username-hide-on-mobile">@User.Username</span>
                <i class="fa fa-angle-down"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-default">
                <li>
                    <a href="@Url.Action("myprofile", "employee")"><i class="icon-user"></i>My Profile</a>
                </li>
                <li>
                    <a href="@Url.Action("myprofile", "employee")">
                        <i class="icon-envelope-open"></i> My Inbox
                        <span class="badge badge-danger" id="unread-messages">  </span>
                    </a>
                </li>
                <li class="divider"> </li>
                <li>
                    <a href="@Url.Action("logout", "employee")"><i class="icon-key"></i>Log Out?</a>
                </li>
            </ul>
        </li>
        <!-- END USER LOGIN DROPDOWN -->
    </ul>
</div>
<!-- END TOP NAVIGATION MENU -->
